[user]
	name = Rob Thatcher

[core]
	editor = code --wait

[pull]
	rebase = true

[fetch]
	prune = true

[push]
	default = current

[credential "https://github.com"]
    helper = !gh auth git-credential

# TODO how to configure a default upstream on first push?
#      have workon make it and push it?


[core]
	editor = code --wait
	pager = delta

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = diff3
	defaultToUpstream = true

[diff]
	colorMoved = default

[delta]
	side-by-side = true


[alias]
	rbom = "!git fetch origin master && git rebase origin/master --strategy-option theirs"
	rbc = "rebase --continue"
	mr = "!git fetch origin master && git checkout -B master origin/master"
	wn = diff --name-only origin/master
	bv = "!git fetch --prune; git branch --verbose --no-abbrev"
	bd = "branch --delete --force"
	wo = "!git fetch origin master && (git checkout origin/master -b $1 || (git checkout $1 && git rebase origin/master --strategy-option theirs)); echo Now working on "
	br = "branch -m"
	bc = "branch -c"
	am = "git commit --amend --all"
	dom = "!git fetch origin master; git diff origin/master"
	dunk = "!git diff origin/master | dunk"
	rhh = "git reset --hard HEAD"

